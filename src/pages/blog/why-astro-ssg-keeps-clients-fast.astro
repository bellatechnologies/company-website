---
import BaseLayout from "../../layouts/BaseLayout.astro";

export const meta = {
	title: "Why Astro SSG keeps clients fast",
	description:
		"The case for static delivery, edge caching, and content that loads before the user finishes the first scroll.",
	category: "Build",
	date: "2025-12-20",
	slug: "why-astro-ssg-keeps-clients-fast",
};

// Check maintenance mode at build time
const MAINTENANCE_MODE = import.meta.env.MAINTENANCE_MODE === 'true' || import.meta.env.MAINTENANCE_MODE === 'TRUE';
if (MAINTENANCE_MODE) {
	return Astro.redirect('/maintenance', 302);
}

const title = `${meta.title} | Bella Technologies`;
const description = meta.description;
---

<BaseLayout title={title} description={description}>
	<main>
		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<span class="hero-badge">{meta.category}</span>
					<h1>{meta.title}</h1>
					<p>{meta.description}</p>
				</div>
				<div class="reveal blog-post">
					<p>
						Astro ships less JavaScript by default, which keeps first paint fast
						and interactions snappy. Static delivery also simplifies caching at
						the edge.
					</p>
					<p>
						Combined with content that loads before the user reaches it, the site
						feels instant even on slower connections.
					</p>
					<a class="secondary-button" href="/blog">Back to Blog</a>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
