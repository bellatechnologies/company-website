---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Blog | Bella Technologies";
const description =
	"Insights on digital strategy, design systems, and high-performing websites.";
---

<BaseLayout title={title} description={description}>
	<main>
		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<h1>Blog</h1>
					<p>
						Notes from our studio on brand clarity, Catppuccin-inspired UI, and
						performance-first builds.
					</p>
				</div>
				<div class="cards">
					<article class="card reveal">
						<span>Notes</span>
						<h3><a href="/blog/hello-world">Hello World!</a></h3>
						<p>
							A quick kickoff note for our blog and a simple hello to new
							visitors.
						</p>
					</article>
					<article class="card reveal">
						<span>Strategy</span>
						<h3>Designing conversion-ready homepages</h3>
						<p>
							A practical framework for structuring hero sections, proof points,
							and CTAs that feel effortless.
						</p>
					</article>
					<article class="card reveal">
						<span>Design</span>
						<h3>Catppuccin accents that stay professional</h3>
						<p>
							How we layer gentle gradients, hover states, and muted shadows
							without over-saturating the layout.
						</p>
					</article>
					<article class="card reveal">
						<span>Build</span>
						<h3>Why Astro SSG keeps clients fast</h3>
						<p>
							The case for static delivery, edge caching, and content that loads
							before the user finishes the first scroll.
						</p>
					</article>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
