---
import BaseLayout from "../../layouts/BaseLayout.astro";

export const meta = {
	title: "Catppuccin accents that stay professional",
	description:
		"How we layer gentle gradients, hover states, and muted shadows without over-saturating the layout.",
	category: "Design",
	date: "2026-01-05",
	slug: "catppuccin-accents-that-stay-professional",
};

const title = `${meta.title} | Bella Technologies`;
const description = meta.description;
---

<BaseLayout title={title} description={description}>
	<main>
		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<span class="hero-badge">{meta.category}</span>
					<h1>{meta.title}</h1>
					<p>{meta.description}</p>
				</div>
				<div class="reveal">
					<p>
						Catppuccin palettes are calming when used as accents. We keep the
						primary layout neutral, then introduce color for badges, buttons, and
						hover states.
					</p>
					<p>
						The result is a professional feel with just enough warmth to guide
						the eye without overwhelming the content.
					</p>
					<a class="secondary-button" href="/blog">Back to Blog</a>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
