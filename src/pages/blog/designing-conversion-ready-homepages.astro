---
import BaseLayout from "../../layouts/BaseLayout.astro";

export const meta = {
	title: "Designing conversion-ready homepages",
	description:
		"A practical framework for structuring hero sections, proof points, and CTAs that feel effortless.",
	category: "Strategy",
	date: "2026-01-18",
	slug: "designing-conversion-ready-homepages",
};

const title = `${meta.title} | Bella Technologies`;
const description = meta.description;
---

<BaseLayout title={title} description={description}>
	<main>
		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<span class="hero-badge">{meta.category}</span>
					<h1>{meta.title}</h1>
					<p>{meta.description}</p>
				</div>
				<div class="reveal blog-post">
					<p>
						Conversion-ready homepages balance clarity and momentum. We anchor the
						hero in one crisp value proposition, then layer proof points that
						answer the next likely question.
					</p>
					<p>
						Each section earns its place: social proof, outcomes, and a CTA that
						repeats the primary action without shouting for attention.
					</p>
					<a class="secondary-button" href="/blog">Back to Blog</a>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
