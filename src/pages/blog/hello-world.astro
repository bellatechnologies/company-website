---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";

export const meta = {
	title: "Hello World!",
	description: "A quick hello from the Notes category at Bella Technologies.",
	category: "Notes",
	date: "2026-02-03",
	slug: "hello-world",
};

// Check maintenance mode at build time
const MAINTENANCE_MODE = import.meta.env.MAINTENANCE_MODE === 'true' || import.meta.env.MAINTENANCE_MODE === 'TRUE';
if (MAINTENANCE_MODE) {
	return Astro.redirect('/maintenance', 302);
}

const title = `${meta.title} | Bella Technologies`;
const description = meta.description;
const categoryEntry = await getEntry("blogCategories", "notes");
const categoryLabel = categoryEntry?.data?.name ?? meta.category;
const categoryDescription = categoryEntry?.data?.description ?? meta.description;
---

<BaseLayout title={title} description={description}>
	<main>
		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<span class="hero-badge">{categoryLabel}</span>
					<h1>Hello World!</h1>
					<p>{categoryDescription}</p>
				</div>
				<div class="reveal blog-post">
					<p>
						Bella Technologies, a micro business per <a href="https://msme.gov.in/know-about-msme" target="_blank">MSME</a>, began with one goal â€” to build SaaS apps in the FinTech sector.
					</p>
					<p>
						We strive to make web applications work for your business so you can focus on what you do best. In the next 3-5 years, we will be 
					</p>
					<p>
						If there is a topic you would like us to cover, let us know and we
						will add it to the Notes queue.
					</p>
					<a class="secondary-button" href="/blog">Back to Blog</a>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
