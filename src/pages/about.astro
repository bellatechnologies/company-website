---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "About | Bella Technologies";
const description =
	"Learn how Bella Technologies combines strategy, design, and engineering.";
---

<BaseLayout title={title} description={description}>
	<main>
		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<h1>About</h1>
					<p>
						We are a boutique studio focused on premium web presence. Our work
						mixes strategic planning, visual polish, and performance-ready
						builds.
					</p>
				</div>
				<div class="cards">
					<article class="card reveal">
						<span>Strategy</span>
						<h3>Clear positioning</h3>
						<p>
							We translate your business goals into a focused digital narrative
							and conversion plan.
						</p>
					</article>
					<article class="card reveal">
						<span>Design</span>
						<h3>Refined visuals</h3>
						<p>
							Catppuccin-inspired color accents keep the experience warm,
							modern, and professional.
						</p>
					</article>
					<article class="card reveal">
						<span>Build</span>
						<h3>Astro performance</h3>
						<p>
							Static, accessible, and lightning fast so your site loads in an
							instant.
						</p>
					</article>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>
