---
import BaseLayout from "../layouts/BaseLayout.astro";

const companyName = "Bella Technologies";
---

<BaseLayout
	title={`${companyName} | Professional Digital Studio`}
	description="Bella Technologies delivers clean, scalable digital experiences for modern brands."
>
	<main>
		<section class="container hero">
			<div class="reveal">
				<span class="hero-badge">Catppuccin-inspired digital studio</span>
				<h1>We craft clean, confident websites for modern brands.</h1>
				<p>
					{companyName} blends strategy, design, and engineering to deliver
					polished digital experiences that convert visitors into loyal
					customers.
				</p>
				<div class="hero-actions">
					<a class="primary-button" href="/portfolio">View Work</a>
					<a class="secondary-button" href="/about">Our Approach</a>
				</div>
			</div>
			<div class="hero-card reveal">
				<h3>What you get</h3>
				<ul>
					<li>Brand-first visuals with Catppuccin accents</li>
					<li>Lightning-fast Astro static delivery</li>
					<li>Copy that communicates clarity and trust</li>
					<li>Elegant animations on scroll and hover</li>
				</ul>
			</div>
		</section>

		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<h2>About</h2>
					<p>
						We are a boutique studio focused on premium web presence. Our work
						mixes strategic planning, visual polish, and performance-ready
						builds.
					</p>
				</div>
				<div class="cards">
					<article class="card reveal">
						<span>Strategy</span>
						<h3>Clear positioning</h3>
						<p>
							We translate your business goals into a focused digital narrative
							and conversion plan.
						</p>
					</article>
					<article class="card reveal">
						<span>Design</span>
						<h3>Refined visuals</h3>
						<p>
							Catppuccin-inspired color accents keep the experience warm,
							modern, and professional.
						</p>
					</article>
					<article class="card reveal">
						<span>Build</span>
						<h3>Astro performance</h3>
						<p>
							Static, accessible, and lightning fast so your site loads in an
							instant.
						</p>
					</article>
				</div>
			</div>
		</section>

		<section class="section">
			<div class="container">
				<div class="section-title reveal">
					<h2>Portfolio</h2>
					<p>
						A selection of recent launches. Each project reflects a focused
						balance of storytelling and conversion-driven layout.
					</p>
				</div>
				<div class="portfolio-grid">
					<article class="portfolio-card reveal">
						<strong>Nova Health Labs</strong>
						<p>
							A premium healthcare brand refresh with multi-step onboarding and
							lead capture.
						</p>
						<div class="portfolio-meta">
							<span>Brand refresh</span>
							<span>Astro SSG</span>
							<span>UX strategy</span>
						</div>
					</article>
					<article class="portfolio-card reveal">
						<strong>Altitude Capital</strong>
						<p>
							A sleek fintech presence designed to convert high-value investors
							into booked consultations.
						</p>
						<div class="portfolio-meta">
							<span>Website redesign</span>
							<span>Analytics</span>
							<span>SEO</span>
						</div>
					</article>
					<article class="portfolio-card reveal">
						<strong>Studio Lumen</strong>
						<p>
							A visual-forward portfolio showcasing creative direction and
							production workflows.
						</p>
						<div class="portfolio-meta">
							<span>Visual identity</span>
							<span>Interactive UI</span>
							<span>Performance</span>
						</div>
					</article>
				</div>
			</div>
		</section>

		<section class="section">
			<div class="container contact reveal">
				<div>
					<h2>Contact</h2>
					<p>
						Ready for a refined digital presence? Share your project details,
						and we will respond within one business day.
					</p>
					<p>
						<strong>Email:</strong> hello@bellatechnologies.co
						<br />
						<strong>Location:</strong> Global / Remote
					</p>
				</div>
				<form>
					<div>
						<label for="name">Name</label>
						<input id="name" name="name" type="text" placeholder="Jane Doe" />
					</div>
					<div>
						<label for="email">Email</label>
						<input id="email" name="email" type="email" placeholder="jane@email.com" />
					</div>
					<div>
						<label for="message">Project details</label>
						<textarea id="message" name="message" placeholder="Tell us about your goals"></textarea>
					</div>
					<button class="primary-button" type="submit">Send Inquiry</button>
				</form>
			</div>
		</section>
	</main>
</BaseLayout>
