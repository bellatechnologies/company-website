---
import MaintenanceLayout from "../layouts/MaintenanceLayout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import { Icon } from "@astrojs/starlight/components";
import "../styles/pages/home.css";
import "../styles/pages/maintenance.css";
import { CONTACT } from "../data/contact";

const companyName = "Bella Technologies";
---

<MaintenanceLayout
	title="Site Under Maintenance | Bella Technologies"
	description="Bella Technologies is currently undergoing maintenance. Please check back soon!"
>
	<main>
		<section class="container hero maintenance-page">
			<div class="reveal maintenance-inner">
				<Breadcrumbs items={[{ label: "Home", href: "/" }, { label: "Maintenance" }]} />
				<div class="hero-badge">
					<Icon name="rocket" aria-hidden="true" />
					<span>Coming Soon</span>
				</div>
				<h1>
					âœ¨ New Website Coming Soon
				</h1>
				<p class="maintenance-lead">
					We're building something extraordinary! Our brand new website is under construction and will launch with flying colors. Stay tuned for an exciting transformation that will elevate your experience.
				</p>
				<div class="maintenance-panel">
					<h3 class="maintenance-panel-title">Expected Launch</h3>
					<p class="maintenance-panel-value">
						~ 2 weeks
					</p>
					<div class="maintenance-panel-divider">
						<p class="maintenance-panel-note">
							<strong>What we're building:</strong> A beautiful new website featuring our Portfolio and case studies with improved user experience
						</p>
					</div>
				</div>
				<div class="maintenance-help">
					<p>
						<strong>Need help?</strong> Contact us at{" "}
						<a href={`mailto:${CONTACT.email}`}>{CONTACT.email}</a>
					</p>
				</div>
			</div>
		</section>
	</main>
</MaintenanceLayout>